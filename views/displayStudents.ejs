<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Students</title>
    <style>
      body {
       
        width: 100%;
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
      }

      .students-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 100px;
        margin-top: 1px;
      }
     

      .student-card {
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 80px;
        padding-top: 30px;
        padding-bottom: 30px;
        width: (30%); 
        box-sizing: border-box;
      }

      .student-card h2 {
        margin-bottom: 10px;
        font-size: 20px; 
      }

      .student-card p {
        margin: 10px 0;
        font-size: 20px; 
      }

      .student-card a {
        text-decoration: none;
        color: #007bff;
        margin-right: 10px;
      }

      .student-card a:hover {
        color: #0056b3;
      }
    </style>
  </head>
  <body>
      <div>
        <%- include('index.ejs') %>
        <div class="students-container">
        
          <% students.forEach(function(student) { %>
          <div class="student-card">
            <h2><%= student.fullName %></h2>
            <p>Roll Number: <%= student.rollNo %></p>
            <p>Age: <%= student.age %></p>
            <p>Date of Birth: <%= student.dateOfBirth %></p>
            <p>Class: <%= student.classOfStudy %></p>
            <p>Subjects: <%= student.subjects.join(', ') %></p>
            <p>Percentage: <%= student.percentage %></p>
            <p>Grade: <%= student.grade %></p>
            <p>Marks:</p>
            <ul>
              <% Object.keys(student.marks).forEach((subject) => { %>
              <li><%= subject %>: <%= student.marks[subject] %></li>
              <% }); %>
            </ul>
            
            <p>
              <a href="/edit/student/<%= student.rollNo %>">
                <i class="fas fa-edit"></i> Update
              </a>
              
              <a href="/delete/<%= student.rollNo %>">
                <i class="fas fa-trash-alt"></i> Delete
              </a>
            </p>
          </div>
          <% }); %>
        </div>
      </div>
      
    </div>
  </body>
</html>
